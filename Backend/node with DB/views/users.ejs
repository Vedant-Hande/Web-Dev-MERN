<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Database</title>
    <link rel="stylesheet" href="user.css" />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Student Database</h1>
        <p>Complete student information from the database</p>
      </div>

      <div class="content">
        <!-- Statistics Section -->
        <div class="stats">
          <div class="stat-card">
            <div class="stat-number"><%= result.length %></div>
            <div class="stat-label">Total Students</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">
              <%= result.filter(student => student.email &&
              student.email.includes('@')).length %>
            </div>
            <div class="stat-label">Valid Emails</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">
              <%= result.filter(student => student.username &&
              student.username.length > 0).length %>
            </div>
            <div class="stat-label">Active Users</div>
          </div>
        </div>

        <!-- Data Display Section -->
        <div class="data-section">
          <div
            style="
              display: flex;
              justify-content: space-between;
              align-items: center;
              margin-bottom: 20px;
            ">
            <h2 class="section-title">Student Information</h2>
            <a href="/users/add" class="btn-add">+ Add New Student</a>
          </div>

          <% if (result && result.length > 0) { %>
          <!-- Card View -->
          <div class="student-grid">
            <% result.forEach(function(student) { %>
            <div class="student-card">
              <div class="student-id">ID: <%= student.id %></div>
              <div class="student-name">
                <%= student.username || 'No Name' %>
              </div>
              <div class="student-email">
                <%= student.email || 'No Email' %>
              </div>
              <div class="student-actions">
                <a href="/users/<%= student.id %>/edit" class="btn-edit"
                  >Edit</a
                >
                <form
                  action="/users/<%= student.id %>?_method=DELETE"
                  method="POST"
                  style="display: inline">
                  <button
                    type="submit"
                    class="btn-delete"
                    onclick="return confirm('Are you sure you want to delete this student?')">
                    Delete
                  </button>
                </form>
              </div>
            </div>
            <% }); %>
          </div>

          <!-- Table View -->

          <% } else { %>
          <div class="no-data">
            <p>No student data found in the database.</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
